body {
    font-family: Tahoma, sans-serif;
    background-color: LightSalmon; /* Light Orchid */
    color: #003366; /* Dark Blue */
    margin: 0;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.container {
    background: lavender; /* Light Lavender */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    margin: 20px 0;
}

h1, h2 {
    text-align: center;
    color: #005fa3; /* Slightly Darker Blue */
}

p {
    text-align: center;
    font-size: 16px;
    line-height: 1.5;
}

label {
    display: block;
    font-weight: bold;
    margin-top: 10px;
    margin-bottom: 5px;
}

input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: 1px solid #cccccc; /* Light Gray */
}

button {
    padding: 10px 15px;
    background-color: #007acc; /* Medium Blue */
    color: #ffffff; /* White */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
}

button:hover {
    background-color: #005fa3; /* Slightly Darker Blue */
}

button:focus {
    outline: none;
    box-shadow: 0 0 5px #005fa3;
}

.result, .message-box {
    margin-top: 20px;
    text-align: center;
    font-size: 18px;
}

.underweight {
    background-color: #ffc107; /* Yellow */
    padding: 10px;
    border-radius: 5px;
    color: #ffffff; /* White */
}

.normal {
    background-color: #28a745; /* Green */
    padding: 10px;
    border-radius: 5px;
    color: #ffffff; /* White */
}

.overweight {
    background-color: #fd7e14; /* Orange */
    padding: 10px;
    border-radius: 5px;
    color: #ffffff; /* White */
}

.obesity {
    background-color: #dc3545; /* Red */
    padding: 10px;
    border-radius: 5px;
    color: #ffffff; /* White */
}

 .small-button {
    display: inline-block; /* Ensure it's treated as an inline element */
    padding: 5px 10px; /* Smaller padding for a compact button */
    background-color: #ff4d4d; /* Red background (similar to the image) */
    color: white; /* White text */
    border: none; /* No borders */
    border-radius: 5px; /* Rounded corners */
    cursor: pointer; /* Pointer/hand icon */
    font-size: 16px; /* Font size for text */
    text-align: center; /* Center the text */
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Slight shadow for visibility */
}

.small-button:hover {
    background-color: #e60000; /* Darker red on hover */
}
#backToTopBtn {
    display: none; /* Hidden by default */
    /* Other styles */
}
